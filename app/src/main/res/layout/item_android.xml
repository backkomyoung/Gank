<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circletextview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/dp_16">

    <circletextimage.viviant.com.circletextimagelib.view.CircleTextImage
        android:id="@+id/circleTextImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        circletextview:random_color="true"
        circletextview:sub_first_character="true"
        circletextview:circle_text_color="@color/colorWhite"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/circleTextImage"
        android:layout_toRightOf="@+id/circleTextImage"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/sp_16"
        tools:text="这是一条很长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长的标题" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/circleTextImage"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/sp_12"
        tools:text="2016-08-15" />
    </RelativeLayout>

</android.support.v7.widget.CardView>