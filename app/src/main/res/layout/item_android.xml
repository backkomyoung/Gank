<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circletextview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_month"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:textColor="@color/colorSecondaryText"
        tools:text="8月"/>


    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="?attr/selectableItemBackground">

    <circletextimage.viviant.com.circletextimagelib.view.CircleTextImage
        android:id="@+id/circleTextImage"
        android:layout_width="@dimen/avatar_64dp"
        android:layout_height="@dimen/avatar_64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        circletextview:circle_text_color="@color/colorWhite"
        circletextview:random_color="true"
        circletextview:sub_first_character="true" />

    <LinearLayout
        android:id="@+id/tv_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_toEndOf="@+id/circleTextImage"
        android:layout_toRightOf="@+id/circleTextImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/sp_16"
            tools:text="这是一条很长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长长的标题" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/sp_12"
            tools:text="2016-08-15" />

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@+id/circleTextImage"-->
        <!--android:layout_marginTop="@dimen/dp_8"-->
        <!--android:background="@color/colorDivider" />-->

    </RelativeLayout>

</LinearLayout>